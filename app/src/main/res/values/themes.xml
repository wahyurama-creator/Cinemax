<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Cinemax" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/text_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/text_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MontserratSemiBold" parent="Base.Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="MontserratMedium" parent="Base.Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="MontserratRegular" parent="Base.Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/text_white</item>
    </style>
</resources>